<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chef">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.bezpiecznegotowanie.login.UserInfo"
            android:label="@string/user_info_activity_label" />
        <activity
            android:name="com.example.bezpiecznegotowanie.login.LoginController"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bezpiecznegotowanie.utilites_search_result_detailed.RecipeDetails"
            android:label="@string/title_activity_recipe_detail"
            android:parentActivityName="com.example.bezpiecznegotowanie.utilites_search.RecipesListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chef.com.example.bezpiecznegotowanie.search_result.RecipesListActivity" />
        </activity>
        <activity
            android:name="com.example.bezpiecznegotowanie.utilites_search.RecipesListActivity"
            android:label="@string/title_activity_recipes_list"
            android:parentActivityName="com.example.bezpiecznegotowanie.utilites_result.FindAction"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chef.com.example.bezpiecznegotowanie.search.SearchActivity" />
        </activity>
        <activity
            android:name="com.example.bezpiecznegotowanie.utilites_result.FindAction"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>